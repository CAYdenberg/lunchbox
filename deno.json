{
  "tasks": {
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "ok": "deno fmt --check && deno lint && deno check main.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "exclude": [".github/dep"]
  },
  "fmt": {
    "exclude": [".github/dep", "*.md"],
    "singleQuote": true
  }
}
